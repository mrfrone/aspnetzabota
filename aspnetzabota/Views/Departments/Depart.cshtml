@model DepartmentsViewModel
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-2">
                <div class="col-md-8 text-center heading-section ftco-animate">
                    <span class="subheading">Отделения</span>
                    <h2 class="mb-4">Основные отделения<br>Диагностического центра "Забота"</h2>
                </div>
            </div>
            <div class="ftco-departments">
                <div class="row ftco-animate">
                    <div class="col-md-12 nav-link-wrap">
                        <div class="nav nav-pills d-flex text-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <a class="nav-link ftco-animate active" id="v-pills-@Model.Departments.FirstOrDefault().ID-tab" data-toggle="pill" href="#v-pills-@Model.Departments.FirstOrDefault().ID" role="tab" aria-controls="v-pills-@Model.Departments.FirstOrDefault().ID" aria-selected="true">@Model.Departments.FirstOrDefault().ShortName</a>
                            @foreach (var depart in Model.Departments.Skip(1))
                            {
                                <a class="nav-link ftco-animate" id="v-pills-@depart.ID-tab" data-toggle="pill" href="#v-pills-@depart.ID" role="tab" aria-controls="v-pills-@depart.ID" aria-selected="true">@depart.ShortName</a>
                            }
                        </div>
                    </div>
                    <div class="col-md-12 tab-wrap">
                        <div class="tab-content bg-light p-4 p-md-5 ftco-animate" id="v-pills-tabContent">
                            <div class="tab-pane py-2 fade show active" id="v-pills-@Model.Departments.FirstOrDefault().ID" role="tabpanel" aria-labelledby="day-@Model.Departments.FirstOrDefault().ID-tab">
                                <div class="row departments">
                                    <div class="col-lg-4 order-lg-last d-flex align-items-stretch">
                                        <div class="img d-flex align-self-stretch" style="background-image: url(@Url.Content("~/images/dept-1.jpg"));"></div>
                                    </div>
                                    <div class="col-lg-8">
                                        <h2>@Model.Departments.FirstOrDefault().Name</h2>
                                        <p>@Model.Departments.FirstOrDefault().Description</p>
                                    </div>
                                </div>
                            </div>
                            @foreach (var depart in Model.Departments.Skip(1))
                            {

                                <div class="tab-pane fade" id="v-pills-@depart.ID" role="tabpanel" aria-labelledby="day-@depart.ID-tab">
                                    <div class="row departments">
                                        <div class="col-lg-4 order-lg-last d-flex align-items-stretch">
                                            <div class="img d-flex align-self-stretch" style="background-image: url(@Url.Content("~/images/dept-1.jpg"));"></div>
                                        </div>
                                        <div class="col-lg-8">
                                            <h2>@depart.Name</h2>
                                            <p>@depart.Description</p>
                                        </div>
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>