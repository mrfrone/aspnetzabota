@using System.Linq;
@model PriceServiceViewModel
<section class="ftco-section bg-light mt-2">
    <div class="container">
        <div class="row justify-content-center mb-1 pb-2">
            <div class="col-md-8 text-center heading-section ftco-animate">
                <h2 class="mb-4">Прайс</h2>
            </div>
        </div>
        <div>
            <select id="groups" name="Groups" onchange="getdepartments(this)">
                <option value="" selected disabled hidden>Выберите категорию...</option>
                @foreach (var item in Model.PriceServiceDep)
                {
                    <option value="@item.grcode">@item.GroupName</option>
                }
            </select>
            <select id="departments" name="Departments">
                <option value="" selected disabled hidden>Выберите подкатегорию...</option>
            </select>
        </div>
        @section scripts{
            <script type="text/javascript">
                function getdepartments(val)
                {
                        var id = val.value;
                        $.ajax({
                            type: 'GET',
                            url: '@Url.Action("GetItems")/' + id,
                            success: function (data) {
                                $('#departments').replaceWith(data);
                            }
                        });
                }
            </script>
        }
        <table class="table table-bordered table-hover">
            <thead class="thead-dark text-center">
                <tr>
                    <th scope="col">Наименование</th>
                    <th scope="col">Цена</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var price in Model.PriceService)
                    {
                        <tr>
                            <td>@price.name</td>
                            <td>@price.price</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</section>